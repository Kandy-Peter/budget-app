<div>
  <div class="home-nav">
    <%= link_to  groups_path, class: "btn" do%>
      <i class="fa-solid fa-chevron-left"></i>
    <%end%>
    <h2 class="entity-title"><%= @group.name.capitalize %> Entities</h2>
    <%= link_to  destroy_user_session_path, method: :delete, class: "btn" do%>
      <i class="fa-solid fa-user-slash"></i>
    <%end%>
  </div>
  <div class="braderhumb el-center">
    <span>total transtactions: <%= @entities.sum(:amount) %> </span>
  </div>
  <div class="transactions clm-row">
      <% if @entities.empty? %>
        <p class="empty-clm el-center">There's no transaction yet. <%= link_to "Click here", new_group_entity_path %> to create one.</p>
      <%else%>
        <% @entities.each do |entity| %>
          <div class="card clm-flex-row">
            <div class="entity_descript">
              <div class="details">
                <h3><%= entity.name %></h3>
                <p>$<%= entity.amount %></p>
              </div>
              <span class="card-date"><%= entity.created_at.to_date %></span> 
            </div>
          </div>
        <%end%>
      <%end%>
  </div>
  <%= link_to "Create Entity", new_group_entity_path, class: "btn-link btn-primary el-center active submit" %>
</div>
